<Window x:Class="MatchGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchGame"
        mc:Ignorable="d"
        Title="Find all of the match animals" Height="450" Width="400">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Coluna 0 -->
        <TextBlock Grid.Column="0" Grid.Row="0" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="0" Grid.Row="2" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="0" Grid.Row="3" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   MouseDown="TextBlock_MouseDown"/>

        <!-- Coluna 1 -->
        <TextBlock Grid.Column="1" Grid.Row="0" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="1" Grid.Row="3" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   MouseDown="TextBlock_MouseDown"/>

        <!-- Coluna 2 -->
        <TextBlock Grid.Column="2" Grid.Row="0" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="2" Grid.Row="1" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="2" Grid.Row="2" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="2" Grid.Row="3" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   MouseDown="TextBlock_MouseDown"/>

        <!-- Coluna 3 -->
        <TextBlock Grid.Column="3" Grid.Row="0" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="3" Grid.Row="1" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="3" Grid.Row="2" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   MouseDown="TextBlock_MouseDown"/>
        <TextBlock Grid.Column="3" Grid.Row="3" Text="?" FontSize="48"
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   MouseDown="TextBlock_MouseDown"/>
    </Grid>
</Window>
